<div class="container">
<h1>Create Account</h1>
<%if @user %>

<p>Error: <%=@user.errors%></p>
<% end %>

<form action="/create" method="post">
  <label>Email: <input type="text" name="user[email]"></label><br>
  <label>Password: <input type="text" name="user[raw_password]"></label><br>
  <label>Password Confirmation: <input type="text" name="user[raw_password_confirmation]"></label>
  <input type="submit" value="submit">
</form>
<h1>Login</h1>
<form action="/login" method="post">
  <label>Email: <input type="text" name="user[email]"></label><br>
  <label>Password: <input type="text" name="user[password]"></label>
  <input type="submit" value="submit">
</form>
</div>
